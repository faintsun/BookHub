<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="twotom.bookhub.HomeActivity">

    <ImageButton
        android:background="@drawable/ic_wishlist"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/button_home_wishlist"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginTop="29dp" />

    <ImageButton
        android:background="@drawable/ic_mybook"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/button_home_my_books"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:nestedScrollingEnabled="false"
        android:layout_alignTop="@+id/button_home_wishlist"
        android:layout_toRightOf="@+id/button_home_wishlist"
        android:layout_toEndOf="@+id/button_home_wishlist"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp" />

    <ImageButton
        android:background="@drawable/ic_profile"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/button_home_profile"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:nestedScrollingEnabled="false"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <ImageButton
        android:background="@drawable/ic_chat"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/button_home_chats"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:nestedScrollingEnabled="false"
        android:layout_alignTop="@+id/button_home_profile"
        android:layout_alignLeft="@+id/button_home_my_books"
        android:layout_alignStart="@+id/button_home_my_books" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wishlist"
        android:id="@+id/textView"
        android:layout_below="@+id/button_home_wishlist"
        android:layout_alignRight="@+id/button_home_wishlist"
        android:layout_alignEnd="@+id/button_home_wishlist"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Books"
        android:id="@+id/textView2"
        android:layout_below="@+id/button_home_my_books"
        android:layout_alignLeft="@+id/button_home_my_books"
        android:layout_alignStart="@+id/button_home_my_books" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Profile"
        android:id="@+id/textView3"
        android:layout_below="@+id/button_home_profile"
        android:layout_alignRight="@+id/button_home_profile"
        android:layout_alignEnd="@+id/button_home_profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chats"
        android:id="@+id/textView4"
        android:layout_below="@+id/button_home_chats"
        android:layout_alignLeft="@+id/button_home_chats"
        android:layout_alignStart="@+id/button_home_chats" />

    <ImageButton
        android:background="@drawable/ic_logout"
        android:id="@+id/button_home_logout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:nestedScrollingEnabled="false"
        android:onClick="onLogout"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:background="@drawable/ic_findbook"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/button_home_find_books"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Log Out"
        android:id="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button_home_logout"
        android:layout_toEndOf="@+id/button_home_logout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Find Books"
        android:id="@+id/textView6"
        android:layout_above="@+id/button_home_find_books"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
